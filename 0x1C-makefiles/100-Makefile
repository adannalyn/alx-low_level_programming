FILE = m.h
CC = gcc
CFLAGS = -Wall -Wextra -Werror -pedantic
SRC = main.c school.c
OBJ = ${SRC:%.c=%.o}
NAME = school
RM = rm -f

all: ${OBJ}
	if [ -a$ {FILE}];
	then
		${CC} ${CFLAGS} ${OBJ} -o ${NAME}
clean:
	${RM} *~ *.swp ${NAME}
oclean:
	${RM} ${wildcard *.o}
fclean:
	${RM} *~ *.swp ${NAME} ${wildcard *.o}

re: fclean all
